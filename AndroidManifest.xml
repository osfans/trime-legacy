<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
        package="com.googlecode.tcime"
        android:versionCode="112"
        android:versionName="1.0"
        >
    <uses-sdk android:minSdkVersion="3"  android:targetSdkVersion="4"/>
    <application android:label="@string/ime_name" android:icon="@drawable/icon">

        <service android:name="ZhuyinIME" android:label="@string/zhuyin_ime_name"
                android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data android:name="android.view.im" android:resource="@xml/method" />
        </service>

        <service android:name="CangjieIME" android:label="@string/cangjie_ime_name"
                android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data android:name="android.view.im" android:resource="@xml/method" />
        </service>

    </application>
</manifest>
